<?xml version="1.0" encoding="utf-8" ?>
<Grid
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartMirror.Controls"
    x:DataType="local:ExpandedMultipleChipSelector"
    x:Class="SmartMirror.Controls.ExpandedMultipleChipSelector"
    x:Name="expandedMultipleChipSelector">

    <FlexLayout
        JustifyContent="Start"
        AlignItems="Start"
        Direction="Row"
        Wrap="Wrap"
        BindableLayout.ItemTemplateSelector="{Binding ItemTemplateSelector, Source={Reference expandedMultipleChipSelector}}"
        BindableLayout.ItemsSource="{Binding DisplayedItemsSource, Source={Reference expandedMultipleChipSelector}}"/>

</Grid>