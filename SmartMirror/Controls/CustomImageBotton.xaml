<?xml version="1.0" encoding="utf-8" ?>
<Border
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartMirror.Controls.CustomImageBotton"
    x:Name="customImageBotton">

    <Image
        Source="{Binding Source, Source={x:Reference customImageBotton}}"
        HeightRequest="{Binding HeightImage, Source={x:Reference customImageBotton}}"
        VerticalOptions="Center" 
        HorizontalOptions="Center"/>
    
</Border>
