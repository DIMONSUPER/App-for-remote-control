<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SmartMirror.Controls"
    xmlns:effects="clr-namespace:SmartMirror.Effects"
    x:Class="SmartMirror.Views.GradientPage"
    Title="GradientPage">

    <Grid RowDefinitions="*, *">

        <Grid
            effects:LinearGradientEffect.StartColor="#38383A"
            effects:LinearGradientEffect.EndColor="#202020"
            x:Name="grid1">

            <Slider 
                x:Name="slider1"
                ValueChanged="slider1_ValueChanged" />

        </Grid>

        <Grid
            Background="{DynamicResource GrayGradientBrush}"
            Grid.Row="1"
            x:Name="grid2">

            <Slider 
                x:Name="slider2"
                ValueChanged="slider2_ValueChanged"/>

        </Grid>

    </Grid>

</ContentPage>