<?xml version="1.0" encoding="utf-8" ?>
<tabs:BaseTabContentPage xmlns:tabs="clr-namespace:SmartMirror.Views.Tabs"
                         xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:vm="clr-namespace:SmartMirror.ViewModels.Tabs"
                         x:Class="SmartMirror.Views.Tabs.ScenariosPage"
                         Title="Scenarios"
                         x:DataType="vm:ScenariosPageViewModel">

    <tabs:BaseTabContentPage.Content>

        <Grid>

            <Label Text="{Binding Title}"
