<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SmartMirror.Controls"
    x:Class="SmartMirror.Views.Skeletons.SettingsElementsSkeleton">

    <ContentView.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="skeletonView">
                
                <controls:SkeletonView
                    HeightRequest="74"
                    Style="{DynamicResource WhiteGradientStyle_i1}"
                    StrokeShape="RoundRectangle 9"
                    StrokeThickness="0"/>

            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Grid Grid.Column="1"
          ColumnDefinitions="*, *"
          ColumnSpacing="25">

        <VerticalStackLayout 
            Grid.Column="0"
            Spacing="25"
            BindableLayout.ItemTemplate="{StaticResource skeletonView}">

            <BindableLayout.ItemsSource>

                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </x:Array>

            </BindableLayout.ItemsSource>
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Column="1"
            Spacing="25"
            BindableLayout.ItemTemplate="{StaticResource skeletonView}">

            <BindableLayout.ItemsSource>

                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </x:Array>

            </BindableLayout.ItemsSource>

        </VerticalStackLayout>

    </Grid>

</ContentView>