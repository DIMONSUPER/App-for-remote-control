<?xml version="1.0" encoding="utf-8" ?>
<resources>
	
	<style name="StartingThemeApp" parent="Theme.SplashScreen">

		<item name="android:windowBackground">@drawable/splash_screen</item>

		<!-- 
			Android+ 12.0 specific settings 
			See: https://developer.android.com/guide/topics/ui/splash-screen#set-theme 
		-->
		<item name="android:windowSplashScreenBackground">@color/splashScreenBackgroundColor</item>
		<item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>		
		<item name="postSplashScreenTheme">@style/MainThemeApp</item>
		<item name="android:windowFullscreen">true</item>
	
	</style>
		
	<style name="MainThemeApp" parent="MainTheme.Base">

		<item name="android:windowBackground">@color/colorPrimary</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:actionModeBackground">?attr/colorPrimary</item>
		<item name="android:actionModeStyle">@style/ActionMode</item>

		<!--FULLSCREEN FOR APPLICATION-->
		<item name="android:windowFullscreen">true</item>
		
		<!--<item name="maui_splash">true</item>-->
		<item name="android:fadeScrollbars">false</item>
		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
		<item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
		
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

</resources>