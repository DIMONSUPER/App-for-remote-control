<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bindablemodels="clr-namespace:SmartMirror.Models.BindableModels"
    xmlns:controls="clr-namespace:SmartMirror.Controls"
    xmlns:behaviors="clr-namespace:SmartMirror.Behaviors"
    x:Class="SmartMirror.Resources.DataTemplates.RoomSourceDataTemplate"
    x:DataType="bindablemodels:RoomSourceBindableModel">

    <controls:Chip
        BackgroundColor="Transparent"
        Margin="0, 0, 9, 12"
        IsChecked="{Binding IsSelected}"
        Text="{Binding Name}"
        behaviors:TouchBehavior.Command="{Binding TapCommand}"
        behaviors:TouchBehavior.CommandParameter="{Binding .}"/>

</DataTemplate>

