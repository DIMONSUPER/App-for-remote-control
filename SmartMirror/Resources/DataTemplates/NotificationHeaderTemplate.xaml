<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bindableModels="clr-namespace:SmartMirror.Models.BindableModels"
    x:DataType="bindableModels:NotificationGroupTitleBindableModel"
    x:Class="SmartMirror.Resources.DataTemplates.NotificationHeaderTemplate">

    <VerticalStackLayout Padding="0, 24">

        <Label
            Text="{Binding Title, Converter={StaticResource timeToDaysOfWeekConverter}}"
            Style="{x:DynamicResource tstyle_i11}"
            HorizontalTextAlignment="Center"/>

    </VerticalStackLayout>

</DataTemplate>
