<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bindableModels="clr-namespace:SmartMirror.Models.BindableModels"
    x:DataType="bindableModels:NotificationGroupBindableModel"
    x:Class="SmartMirror.Resources.DataTemplates.NotificationHeaderTemplate">

    <Label
        Style="{x:DynamicResource tstyle_i11}"
        HorizontalTextAlignment="Center"
        Text="{Binding GroupName, Converter={StaticResource timeToDaysOfWeekConverter}}"/>

</DataTemplate>
