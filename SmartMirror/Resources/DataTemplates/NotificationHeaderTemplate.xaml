<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SmartMirror.Models"
    x:DataType="models:NotificationsGroupedByDayModel"
    x:Class="SmartMirror.Resources.DataTemplates.NotificationHeaderTemplate">

    <ViewCell>
        
        <VerticalStackLayout Padding="0, 24, 50, 24">

            <Label
                Text="{Binding Name, Converter={StaticResource timeOnDaysOfWeek}}"
                Style="{x:DynamicResource tstyle_i11}"
                HorizontalTextAlignment="Center"/>

        </VerticalStackLayout>
        
    </ViewCell>

</DataTemplate>
