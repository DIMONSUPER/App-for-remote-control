<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bindablemodels="clr-namespace:SmartMirror.Models.BindableModels"
    xmlns:controls="clr-namespace:SmartMirror.Controls"
    x:DataType="bindablemodels:SelectedBindableModel"
    x:Class="SmartMirror.Resources.DataTemplates.ExpandButtonTemplate">

    <controls:IconCheckBox IsChecked="{Binding IsSelected}">

        <controls:IconCheckBox.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding TapCommand}"/>
        </controls:IconCheckBox.GestureRecognizers>

    </controls:IconCheckBox>

</DataTemplate>
