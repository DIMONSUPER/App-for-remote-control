<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- COLORS -->
    <Color x:Key="Primary">#3A3A3C</Color>
    <Color x:Key="Secondary">#2A2A2A</Color>
    <Color x:Key="Tertiary">#E9E9E9</Color>

    <!-- BACKGROUND COLORS -->
    <Color x:Key="cbg_i1">#2A2A2A</Color>
    <Color x:Key="cbg_i2">#3A3A3C</Color>
    <Color x:Key="cbg_i3">#E9E9E9</Color>
    <Color x:Key="cbg_i4">#FFFFFF</Color>
    <Color x:Key="cbg_i5">#801F1F1F</Color> <!-- #1F1F1F with 50 opacity-->
    <Color x:Key="cbg_i6">#7EE5EB</Color>
    <Color x:Key="cbg_i7">#D0D1D3</Color>
    <Color x:Key="cbg_i8">#CC030303</Color> <!-- 030303 with 80 opacity -->
    <Color x:Key="cbg_i9">#E5FFFFFF</Color> <!-- #FFFFFF with 90 opacity-->
    <Color x:Key="cbg_i10">#000000</Color>  <!-- Black -->
    <Color x:Key="cbg_i11">#EAEAEA</Color>
    <Color x:Key="cbg_i12">#252525</Color>  <!--Dark Gray-->

    <!-- TEXT COLORS -->
    <Color x:Key="tcolor_i1">#FFFFFF</Color>    <!-- White -->
    <Color x:Key="tcolor_i2">#000000</Color>    <!-- Black -->
    <Color x:Key="tcolor_i3">#D0D1D3</Color>    <!-- Gray -->
    <Color x:Key="tcolor_i4">#7EE5EB</Color>    <!-- Aqua -->
    <Color x:Key="tcolor_i5">#252525</Color>    <!--Dark Gray-->
    <Color x:Key="tcolor_i6">#969697</Color>    <!-- Light Gray -->
    <Color x:Key="tcolor_i7">#525252</Color>    <!--  -->
    <Color x:Key="tcolor_i8">#EBA17E</Color>    <!-- Orange -->

    <!-- BRUSHES -->
    <LinearGradientBrush x:Key="GrayGradientBrush">

        <GradientStop Color="#38383A"
                      Offset="0"/>

        <GradientStop Color="#202020"
                      Offset="1"/>

    </LinearGradientBrush>

</ResourceDictionary>
